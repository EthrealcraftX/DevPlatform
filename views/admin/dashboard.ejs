<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body class="admin-dashboard">

  <nav class="admin-navbar">
    <div class="left">
      <h2>Admin Panel</h2>
    </div>
    <div class="right">
      <span><%= user.username %></span>
      <a href="/">Back to home</a>
      <a href="/admin/stats">System Stats</a>
      <a href="/admin/users">Users</a>
      <div class="notification">
        <span class="bell">ðŸ””</span>
        <% if (pendingUsers.length > 0) { %>
          <span class="count"><%= pendingUsers.length %></span>
        <% } %>
      </div>
    </div>
  </nav>

  <main>
    <h3>Pending User Approvals</h3>

    <% if (pendingUsers.length === 0) { %>
      <p>No users awaiting approval.</p>
    <% } else { %>
      <table class="pending-table">
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Registered</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% pendingUsers.forEach(user => { %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= new Date(user.createdAt).toLocaleString() %></td>
              <td>
                <form action="/admin/approve/<%= user.id %>" method="POST" style="display:inline;">
                  <button class="btn approve">Approve</button>
                </form>
                <form action="/admin/reject/<%= user.id %>" method="POST" style="display:inline;">
                  <button class="btn reject">Reject</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </main>

</body>
</html>