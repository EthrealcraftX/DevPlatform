<h2>ðŸ“Œ Project Overview</h2>

<div class="project-meta">
  <p><strong>Name:</strong> <%= project.name %></p>
  <p><strong>ID:</strong> #<%= project.id %></p>
  <p><strong>Type:</strong> <%= project.type %></p>
  <p><strong>Status:</strong>
    <span class="status <%= project.status %>">
      <%= project.status === 'online' ? 'ðŸŸ¢ Online' : 'ðŸ”´ Offline' %>
    </span>
  </p>
  <p><strong>Allocated Space:</strong> <%= project.maxSpace %> MB</p>
</div>

<div class="project-controls">
  <form action="/project/<%= project.id %>/start" method="POST" style="display:inline;">
    <button class="btn start" <%= project.status === 'online' ? 'disabled' : '' %>>Start</button>
  </form>

  <form action="/project/<%= project.id %>/stop" method="POST" style="display:inline;">
    <button class="btn stop" <%= project.status === 'offline' ? 'disabled' : '' %>>Stop</button>
  </form>

  <form action="/project/<%= project.id %>/delete" method="POST" style="display:inline;">
    <button class="btn delete" <%= project.status === 'online' ? 'disabled' : '' %>>Delete</button>
  </form>
</div>

<style>
  .project-meta p {
    margin: 8px 0;
  }

  .status.online {
    color: green;
    font-weight: bold;
  }

  .status.offline {
    color: red;
    font-weight: bold;
  }

  .project-controls {
    margin-top: 20px;
  }

  .project-controls .btn {
    margin-right: 10px;
    padding: 8px 14px;
    border: none;
    border-radius: 4px;
    color: white;
    font-weight: bold;
  }

  .btn.start {
    background: green;
  }

  .btn.stop {
    background: crimson;
  }

  .btn.delete {
    background: gray;
  }

  .btn[disabled] {
    opacity: 0.5;
    cursor: not-allowed;
  }
</style>