<h2>üìÅ File Manager</h2>

<div class="file-manager">
  <ul class="file-tree">
    <% function renderTree(tree) { %>
      <% tree.forEach(item => { %>
        <li>
          <% if (item.type === 'folder') { %>
            <details open>
              <summary>üìÅ <%= item.name %></summary>
              <ul>
                <%= renderTree(item.children) %>
              </ul>
            </details>
          <% } else { %>
            <div class="file-item">
              üìÑ <%= item.name %>
              <form action="/project/<%= project.id %>/file/open" method="POST" target="_blank" class="inline">
                <input type="hidden" name="path" value="<%= item.path %>">
                <button class="btn tiny">Open</button>
              </form>
              <% if (item.path !== project.main) { %>
                <form action="/project/<%= project.id %>/files/delete" method="POST" class="inline">
                  <input type="hidden" name="path" value="<%= item.path %>">
                  <button class="btn tiny danger">Delete</button>
                </form>
              <% } else { %>
                <span class="tag main-file">Main</span>
              <% } %>
            </div>
          <% } %>
        </li>
      <% }) %>
    <% } %>

    <%= renderTree(files) %>
  </ul>
</div>

<hr>

<!-- Upload form -->
<h4>Upload New File</h4>
<form action="/project/<%= project.id %>/file/upload" method="POST" enctype="multipart/form-data">
  <input type="file" name="file" required />
  <input type="text" name="targetPath" placeholder="Optional subfolder (e.g. src/)" />
  <button type="submit">Upload</button>
</form>

<style>
  .file-manager {
  font-family: 'Segoe UI', 'Roboto', 'Helvetica Neue', sans-serif;
  color: #333;
  background-color: #fff;
  border-radius: 6px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  padding: 1.25rem;
  max-width: 800px;
  margin: 0 auto;
}

.file-tree {
  list-style-type: none;
  padding-left: 1rem;
  margin: 0;
}

.file-tree details {
  margin: 0.5rem 0;
}

.file-tree summary {
  cursor: pointer;
  padding: 0.5rem;
  border-radius: 4px;
  font-weight: 500;
  transition: background-color 0.2s ease;
  display: flex;
  align-items: center;
}

.file-tree summary:hover {
  background-color: #f5f5f5;
}

.file-tree summary::marker {
  display: none;
  content: '';
}

.file-tree summary::-webkit-details-marker {
  display: none;
}

.file-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.5rem;
  border-radius: 4px;
  transition: background-color 0.2s ease;
}

.file-item:hover {
  background-color: #f8f9fa;
}

.inline {
  display: inline-flex;
  margin-left: auto;
}

.btn {
  cursor: pointer;
  font-weight: 500;
  border: 1px solid transparent;
  transition: all 0.2s ease;
  padding: 0.375rem 0.75rem;
  font-size: 0.875rem;
  line-height: 1.5;
  border-radius: 4px;
}

.btn.tiny {
  font-size: 0.75rem;
  padding: 0.25rem 0.5rem;
  line-height: 1.3;
}

.btn.tiny.danger {
  background-color: #dc3545;
  color: white;
  border-color: #dc3545;
}

.btn.tiny.danger:hover {
  background-color: #c82333;
  border-color: #bd2130;
}

.tag.main-file {
  background: #28a745;
  color: #fff;
  padding: 0.25rem 0.5rem;
  font-size: 0.75rem;
  border-radius: 10px;
  margin-left: 0.5rem;
  font-weight: 500;
}

hr {
  border: 0;
  height: 1px;
  background-color: #e9ecef;
  margin: 1.5rem 0;
}

h4 {
  margin-top: 0;
  margin-bottom: 1rem;
  font-weight: 600;
  color: #212529;
}

form {
  display: flex;
  gap: 0.75rem;
  align-items: center;
  flex-wrap: wrap;
}

input[type="file"] {
  border: 1px solid #ced4da;
  padding: 0.375rem 0.75rem;
  border-radius: 4px;
  background-color: #f8f9fa;
}

input[type="text"] {
  border: 1px solid #ced4da;
  padding: 0.375rem 0.75rem;
  border-radius: 4px;
  flex-grow: 1;
  min-width: 200px;
}

button[type="submit"] {
  background-color: #007bff;
  color: white;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

button[type="submit"]:hover {
  background-color: #0069d9;
}

</style>
