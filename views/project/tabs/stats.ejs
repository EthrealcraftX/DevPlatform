<h2>ðŸ“Š Resource Usage</h2>

<div class="stats-boxes">
  <div class="stat">
    <h4>Used Space</h4>
    <p id="usedVal">-- MB</p>
  </div>
  <div class="stat">
    <h4>Free Space</h4>
    <p id="freeVal">-- MB</p>
  </div>
  <div class="stat">
    <h4>Internet Speed</h4>
    <p id="speedVal">-- Mbps</p>
  </div>
</div>

<canvas id="spaceChart" width="400" height="200"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const ctx = document.getElementById('spaceChart').getContext('2d');
  const chart = new Chart(ctx, {
    type: 'doughnut',
    data: {
      labels: ['Used MB', 'Free MB'],
      datasets: [{
        label: 'Space',
        data: [0, 0],
        backgroundColor: ['#ff6384', '#36a2eb'],
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: { position: 'bottom' }
      }
    }
  });

  const socket = io('/stats', { query: { projectId: "<%= project.id %>" } });

  socket.on('stats', ({ used, free, speed }) => {
    chart.data.datasets[0].data = [used, free];
    chart.update();

    document.getElementById('usedVal').textContent = `${used} MB`;
    document.getElementById('freeVal').textContent = `${free} MB`;
    document.getElementById('speedVal').textContent = `${speed}`;
  });
</script>

<style>
  .stats-boxes {
    display: flex;
    gap: 20px;
    margin-bottom: 25px;
  }

  .stat {
    background: #f4f4f4;
    padding: 15px;
    border-radius: 5px;
    flex: 1;
    text-align: center;
  }

  .stat h4 {
    margin-bottom: 10px;
  }
</style>